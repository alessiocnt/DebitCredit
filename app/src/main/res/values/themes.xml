<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DebitCredit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rally_green_500</item>
        <item name="colorPrimaryVariant">@color/rally_dark_green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rally_green_500</item>
        <item name="colorSecondaryVariant">@color/rally_yellow_300</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">#00000000</item>
        <item name="colorSurface">@color/rally_background</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="backgroundStacked">#00000000</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorBackgroundFloating">
            @color/rally_background
        </item>
        <item name="android:colorBackgroundFloating" tools:targetApi="23">
            @color/rally_background
        </item>
    </style>

    <style name="Theme.DebitCredit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ColorSheet">
        <item name="android:background">@color/rally_background</item>
    </style>

    <style name="CustomCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/rally_card_background</item>
    </style>

    <style name="Theme.DebitCredit.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DebitCredit.PopupOverlay" parent="ThemeOverlay.AppCompat.Dialog" />

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundTint">@color/rally_background</item>
        <item name="android:textColor">@color/rally_orange_300</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>